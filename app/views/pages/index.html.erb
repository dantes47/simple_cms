<<div class="pages index">
  <h2>
    Pages
  </h2>

  <%= link_to('Add New Page', new_page_path, :class => 'action_new') %>

  <table class="listing" summary="Page Listing">
    <tr class="header">
      <th>#</th>
      <th>Subject</th>
      <th>Page</th>
      <th>Visible</th>
      <th>Actions</th>
    </tr>
    <% @pages.each do |page| %>
    <tr>
      <td><%= page.position %></td>
      <td><%= page.name %></td>
      <td class="center"><%= page.visible ? 'Yes' : 'No' %></td>
      <td class="actions">
        <%= link_to('Show', page_path(page), :class => 'action_show') %>
        <%= link_to('Edit', edit_page_path(page), :class => 'action_edit') %>
        <%= link_to('Delete', delete_page_path(page), :class => 'action_delete') %>
      </td>
    </tr>
  <% end %>
  </table>
