<div class="subjects index">
  <h2>
    Subjects
  </h2>

  <%= link_to('Add New Subject', new_subject_path, :class => 'action_new') %>

  <table class="listing" summary="Subject Listing">
    <tr class="header">
      <th>#</th>
      <th>Subject</th>
      <th>Visible</th>
      <th>Pages</th>
      <th>Actions</th>
    </tr>
    <% @subjects.each do |subj| %>
    <tr>
      <td><%= subj.position %></td>
      <td><%= subj.name %></td>
      <td class="center"><%= subj.visible ? 'Yes' : 'No' %></td>
      <td class="center"><%= subj.pages.size %></td>
      <td class="actions">
        <%= link_to('Show', subject_path(subj), :class => 'action_show') %>
        <%= link_to('Edit', '#', :class => 'action_edit') %>
        <%= link_to('Delete', '#', :class => 'action_delete') %>
      </td>
    </tr>
  <% end %>
  </table>
</div>
